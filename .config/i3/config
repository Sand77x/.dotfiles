set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 11

# !! remember to get noto color for emojis
# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 11

# !! remember to edit logind to override power button and lid switches
# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
# exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# !! remember to install tuned service also for battery saving
# Suspend after 4 minutes idle
exec --no-startup-id xautolock -time 4 -locker "systemctl suspend"

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
# exec --no-startup-id nm-applet

# bluetooth applet
# exec --no-startup-id blueman-applet

# start policykit authentication agent
exec --no-startup-id  /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

# set keyboard layout
exec --no-startup-id setxkbmap us -option caps:none

# Start feh for background
exec --no-startup-id ~/.fehbg

# Start the notification daemon
exec --no-startup-id dunst

# Start the compositor
exec_always --no-startup-id picom -b

# Refresh i3status
# set $refresh_i3status killall -SIGUSR1 i3status

# power button
bindsym XF86PowerOff exec --no-startup-id . $HOME/.bash/path.sh && power-menu

# common dunstify call
set $dunstify_id dunstify -r 9999

# using pamixer to set volume
bindsym XF86AudioRaiseVolume exec --no-startup-id sh -c 'pamixer -i 5 && $dunstify_id -i audio-volume-high " Volume: $(pamixer --get-volume)%"'
bindsym XF86AudioLowerVolume exec --no-startup-id sh -c 'pamixer -d 5 && $dunstify_id -i audio-volume-low " Volume: $(pamixer --get-volume)%"'
bindsym XF86AudioMute exec --no-startup-id sh -c 'pamixer -t && $dunstify_id -i audio-volume-muted " Volume: $(pamixer --get-mute | [ "$(grep true)" = "true" ] && echo Muted || echo Unmuted)"'
bindsym XF86AudioMicMute exec --no-startup-id sh -c 'pamixer --default-source -t && $dunstify_id "Mic: $(pamixer --default-source --get-mute | grep yes && echo Muted || echo Unmuted)"'

# using light to set brightness
bindsym XF86MonBrightnessUp exec --no-startup-id sh -c '$dunstify_id -i weather-clear " Brightness: $(light -A 10 && light -G | cut -d. -f1)%"'
bindsym XF86MonBrightnessDown exec --no-startup-id sh -c '$dunstify_id -i weather-clear-night " Brightness: $(light -U 10 && light -G | cut -d. -f1)%"'

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar


# exec applications
bindsym $mod+Return exec alacritty --working-directory ~
bindsym Shift+Print exec --no-startup-id flameshot gui
bindsym Print exec --no-startup-id flameshot full -c
bindsym $mod+e exec --no-startup-id . $HOME/.bash/path.sh && dmenu-emoji
bindsym $mod+b exec brave-browser
bindsym $mod+a exec --no-startup-id . $HOME/.bash/path.sh && boomer

# kill focused window
bindsym $mod+w kill

# start dmenu (a program launcher)
bindsym $mod+z exec --no-startup-id . $HOME/.bash/path.sh && dmenu_desktop
bindsym $mod+Shift+z exec --no-startup-id . $HOME/.bash/path.sh && dmenu_run
bindsym $mod+Shift+w exec --no-startup-id . $HOME/.bash/path.sh && dmenu_pkill


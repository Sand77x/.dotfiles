#!/bin/bash

CACHE="$HOME/.cache/xautolock_status"

# make sure cache exists
[ -f "$CACHE" ] || echo "OFF" > "$CACHE"

if [ "$(cat "$CACHE")" = " ON" ]; then
    xautolock -disable
    echo "OFF" > "$CACHE"
    dunstify -r 6767 -i system-lock-screen "Autolock: OFF"
else
    xautolock -enable
    echo " ON" > "$CACHE"
    dunstify -r 6767 -i system-lock-screen "Autolock: ON"
fi

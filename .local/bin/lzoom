#!/bin/bash

# launch zoom based on list
lzoom() {
    local links_file=~/odoc/lzoom.md
    local inp="${1,,}"

    if [ -z $inp ]; then
        odoc s lzoom
        return
    fi

    while read -r long short link; do
        long="${long,,}" # lowercase the strings
        short="${short,,}"

        if [ "$1" = "$long" ] || [ "$1" = "$short" ]; then
            open $link > /dev/null 2>&1 &
            echo "Opening ($long) $link in browser..."
            return
        fi
    done < $links_file

    echo "No zoom link for that keyword found."
}

lzoom "$@"

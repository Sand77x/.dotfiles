#!/bin/bash

# Options
options="Cancel\nSuspend\nLock\nLogout\nShutdown\nReboot"

# Launch dmenu
choice=$(echo -e "$options" | dmenu -i)

# Act based on selection
case "$choice" in
    "Suspend")
        i3lock-cool && systemctl suspend
        ;;
    "Lock")
        i3lock-cool
        ;;
    "Logout")
        i3-msg exit
        ;;
    "Shutdown")
        systemctl poweroff
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Cancel" | *)
        # Do nothing
        ;;
esac
